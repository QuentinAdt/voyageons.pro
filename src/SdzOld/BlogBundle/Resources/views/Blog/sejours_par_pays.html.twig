{# src/Sdz/BlogBundle/Resources/views/Blog/sejours_par_pays.html.twig #}
 
{% extends "SdzBlogBundle::layout.html.twig" %}
 
{% block title %}All inclusive {{ pays|title }} pas chers - {{ parent() }} {% endblock %}

{% block sdzblog_sidebar %}
{% include "SdzBlogBundle:Blog:sidebar.html.twig" %}
{% endblock %}

{% block sdzblog_body %}

<div class="span9">
	<div class="bs-docs-grid">
	    <div class="row-fluid show-grid">
		    <div class="span12">S&eacute;jours {{  pays|title }} tout compris</div>
			    <div class="row-fluid show-grid">
			{{nb_result_pays}} s&eacute;jours disponibles
			    <div class="row-fluid show-grid">
				    <div class="span12"><p class="description_offre" >S&eacute;jours en {{pays|title}}: Comparez les s&eacute;jours en {{pays|title}} de tous les voyagistes.
								Pour trouver votre s&eacute;jour en {{pays|title}} pas cher, comparez!
								Nous comparons toutes les offres de s&eacute;jours parmi plus de 15 voyagistes et tours opérateurs.
								Parcourez toutes les meilleures offres de s&eacute;jours tout compris discount en {{pays|title}}.
								Partez en voyage en {{pays|title}} pas cher, et trouvez vos vacances moins ch&egrave;res avec All.Inclusive.fr !</p><p> </p>

					{% for resultat in resultsolr  %}
    					    <div class="row-fluid show-grid">
						    <div class="span12">
		    					    <div class="row-fluid show-grid">
								<div class="span3"><img src="{{ resultat.smallImage }}"></div>
								<div class="span6"><h5><a rel="nofollow" href="{{resultat.deepLink}}">{{ resultat.name }}</a> </h5><p class="description_offre">{{ resultat.terms|truncate(300, false, '...') }}</p></div>
								<div class="span2"><a class="prix" rel="nofollow" href="{{resultat.deepLink}}">{{ resultat.price|number_format(0, '.', '') }} &euro;</a></div>
							    </div>
							</div>	
						</div>
		    		<br/>
        {% endfor  %}
</div> 	
</div> 	
</div> 	
</div> 	
</div> 	
</div> 	
</div> 	
<div class="pagination">
    <ul>
      {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
    </ul>
  </div>

{% endblock %}
